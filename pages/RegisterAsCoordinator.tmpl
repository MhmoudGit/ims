{{define "RegisterAsCoordinator"}}

<html>
{{template "head" .}}

<body>
    <div class="register">

        <form id="register-form">
            <h1>
                Register
            </h1>
            <div class="row">
                <div class="col">
                    <label for="fullName">Full Name</label>
                    <input type="text" class="form-control" id="fullName" placeholder="Full Name"
                        aria-label="Full Name">
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label for="email">E-mail</label>
                    <input type="text" class="form-control" id="email" placeholder="example@gmail.com"
                        aria-label="email">
                </div>
                <div class="col">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" aria-label=" password" placeholder="Title">
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <label for="phone">Phone</label>
                    <input type="number" class="form-control" id="phone" placeholder="+201165*******"
                        aria-label="email">
                </div>
                <div class="col">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" aria-label=" password">
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label for="organization">Organization</label>
                    <input type="text" class="form-control" id="organization" placeholder="EX:Company Name"
                        aria-label="organization">
                </div>
            </div>

            <div class="btn btn-primary register-btn">
                Register
            </div>

        </form>
    </div>

</body>

</html>
{{end}}